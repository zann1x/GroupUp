<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="660.0" prefWidth="940.0" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controller.TeamController">
   <center>
      <VBox prefHeight="200.0" prefWidth="100.0" spacing="5.0" BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="lbl_name" text="Name *" />
            <TextField fx:id="tf_name" prefWidth="300.0" />
            <HBox prefWidth="200.0" spacing="5.0">
               <children>
                  <Button fx:id="btn_addPlayer" mnemonicParsing="false" onAction="#handleAddPlayer" text="Add player" />
                  <Button fx:id="btn_removePlayer" mnemonicParsing="false" onAction="#handleRemovePlayer" text="Remove player" />
               </children>
            </HBox>
            <ListView fx:id="lv_selectedPlayers" prefHeight="200.0" prefWidth="300.0" />
            <Label text="* mandatory fields" textFill="RED">
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </Label>
            <Button fx:id="btn_submit" mnemonicParsing="false" onAction="#handleSubmit" text="Submit">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </Button>
         </children>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
      </VBox>
   </center>
</BorderPane>
