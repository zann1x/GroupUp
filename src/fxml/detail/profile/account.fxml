<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.detail.profile.AccountController">
   <center>
      <VBox spacing="5.0" BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER_LEFT" fillHeight="false" spacing="5.0">
               <children>
                  <Label text="Vorname" />
                  <TextField fx:id="txt_forename" />
                  <Label text="Nachname">
                     <HBox.margin>
                        <Insets left="50.0" />
                     </HBox.margin>
                  </Label>
                  <TextField fx:id="txt_surname" />
               </children>
            </HBox>
            <Label text="Pseudonym">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin></Label>
            <TextField fx:id="txt_pseudonym" />
            <Label text="Passwort">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin></Label>
            <PasswordField fx:id="pw_password" promptText="Enter new Password" />
            <Label text="Region">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </Label>
            <ComboBox fx:id="cb_regions" editable="true" prefWidth="500.0" promptText="Select your Region" />
            <Label text="E-Mail">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin></Label>
            <TextField fx:id="txt_email" />
            <Button fx:id="btn_save" alignment="CENTER_RIGHT" contentDisplay="CENTER" mnemonicParsing="false" onAction="#save" text="Save" />
            <Label fx:id="lbl_success" text="success" textFill="GREEN" visible="false" />
         </children>
      </VBox>
   </center>
</BorderPane>
